<h2 class="display-6">Locations Table</h2>

{{!-- Create a table --}}
<table class="table table-striped table-hover" id="Locations-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print each attribute in order --}}
        {{#each data}}
        <tr data-value={{this.locationID}}>
            <td>{{this.locationID}}</td>
            <td>{{this.state}}</td>
            <td>{{this.city}}</td>
            <td><button onclick="deleteLocation({{this.locationID}})" class="btn btn-danger">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<div class="container">
    <div class="row">

        <div class="col">
            {{!-- Form to add a record to the table --}}
            <form id="add-location-form-ajax">
                <h3 class="display-6">Create New Row</h3>

                <div class="row">
                    <div class="form-group col-12">
                        <label for="input-state">state: </label>
                        <input class="form-control" type="text" name="input-state" id="input-state" placeholder="state">
                    </div>


                    <div class="form-group col-12">
                        <label for="input-city">city: </label>
                        <input class="form-control" type="text" name="input-city" id="input-city" placeholder="city">
                    </div>
                </div>

                <input type="submit" value="Create" class="btn btn-primary">
            </form>
        </div>

        <div class="col">
            {{!-- Form to search the table --}}
            <form id="search-location-html" method='GET' action='/locations'>
                <h3 class="display-6">Search Table</h3>

                <div class="form-group col-12">
                    <label for="state">Search by state: </label>
                    <input class="form-control" type="text" name="state" id="input-state-html-search"
                        placeholder="state">
                </div>

                <input type="submit" value="Search" class="btn btn-primary">
                <a href='/locations'><button class="btn btn-primary">Reset Table</button></a>
            </form>
        </div>

        <div class="col">
            {{!-- Form to update the table --}}
            <form id="update-location-form-ajax">
                <h3 class="display-6">Update Row</h3>

                <div class="form-group col-12">
                    <label for="mySelectLocation">Update by locationID: </label>
                    <select class="form-control" name="input-locationID" id="mySelectLocation">
                        <option>-select-</option>
                        {{#each data}}
                        <option value="{{this.locationID}}">{{this.locationID}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="row">

                    <div class="form-group col-12">
                        <label for="input-state-update">state: </label>
                        <input class="form-control" type="text" name="input-state-update" id="input-state-update"
                            placeholder="state">
                    </div>

                    <div class="form-group col-12">
                        <label for="input-city-update">city: </label>
                        <input class="form-control" type="text" name="input-city-update" id="input-city-update"
                            placeholder="city">
                    </div>
                </div>

                <input type="submit" value="Update" class="btn btn-primary">

            </form>
        </div>

    </div>
</div>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_location.js"></script>

<script src="./js/delete_location.js"></script>

<script src="./js/update_location.js"></script>